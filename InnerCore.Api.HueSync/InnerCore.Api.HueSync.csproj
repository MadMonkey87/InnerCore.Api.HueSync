<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>A simple library to communicate with the Philips Hue Sync Box</Description>
    <PackageId>InnerCore.Api.HueSync</PackageId>
    <Authors>Philippe Wechsler</Authors>
    <Company>InnerCore</Company>
    <Copyright>Copyright Â© 2020 Philippe Wechsler</Copyright>
    <PackageProjectUrl>https://github.com/MadMonkey87/InnerCore.Api.HueSync</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MadMonkey87/InnerCore.Api.HueSync</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>philips signify hue sync hdmi ambilight</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <WarningLevel>0</WarningLevel>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>
  
</Project>
